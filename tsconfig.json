{
  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2021"],                   // Ensure correct built-ins

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",

    "baseUrl": ".",                       // Project Root
    "paths": {
      "@/*": ["src/*"]                    // Now you can Import as  '@/ConfigManager'
    }

  },
  "include": [
    "*.ts",
    "src/**/*.ts", ".sandbox/semanticQuery.test.ts_",
  ],
  "exclude": [
    "node_modules"
  ]
}